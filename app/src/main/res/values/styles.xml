<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="HeaderText" parent="TextAppearance.AppCompat">
        <item name="android:padding">8dp</item>
        <item name ="android:background">@color/primaryDarkColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>
    <style name="NotStarted" parent="TextAppearance.AppCompat">
        <item name="android:padding">8dp</item>
    </style>
    <style name="Completed" parent="TextAppearance.AppCompat">
        <item name="android:padding">8dp</item>
        <item name ="android:background">@color/secondaryColor</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

</resources>
